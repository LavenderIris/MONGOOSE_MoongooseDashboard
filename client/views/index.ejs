<style>
    th, table, tr, td, tr {
        border: 1px black solid;
    }

    td {
        padding-left: 2%;
        margin-right: 5%;
    }
    a {
        display: inline-block;
    }

    form {
        display: inline-block;
    }

    button {
     background:none!important;
     color:blue;
     border:none; 
     padding:0!important;
     font: inherit;
     /*border is optional*/
     border-bottom:1px solid blue; 
     cursor: pointer;
}
</style>
<table>
    <col width="100">
    <col width="100">
    <col width="100">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i=0; i<puppers.length; i++) { %>
            <tr>
                <td><%= puppers[i].name %></td> 
                <td><%= puppers[i].breed %></td>
                <td><a href="/pupper/edit/<%= puppers[i]._id %>">Edit</a>
                <form action="/pupper/destroy/<%= puppers[i]._id %>" method='post' >
                    <button type='submit'>Delete</button>
                </form>
                </td>
            </tr>
        <% } %>
    </tbody>

</table>